<article class="post">
  <hgroup>
    <h1><%= link_to_unless_current post.title, post %></h1>
    <h2><%= post.updated_at.to_s :post %></h2>
  </hgroup>
<% if post.photo_url.present? %>
  <section class="photo">
  <p><%= image_tag post.photo_url, :alt => "Photo of restaurant" %></p>
  </section>
<% end %>
  <section class="main content">
  <%= post.content.html_safe %>
  </section>
  
<% if post.extended_content.present? %>
  <p class="jump"><%= link_to 'Continue reading â†’', post %></p>
<% end %>
  
  <section class="extended content">
  <%= post.extended_content.html_safe %>
  </section>
</article>
